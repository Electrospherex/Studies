programa
{
	
	funcao inicio()
	{
		real mes1,mes2,mes3,mes4,media
		cadeia funcionario

		escreva("Digite o nome do funcionario:")
		leia(funcionario)
		escreva("Digite as vendas de janeiro:")
		leia(mes1)	
		escreva("Digite as vendas de fevereiro:")
		leia(mes2)
		escreva("Digite as vendas de março:")
		leia(mes3)
		escreva("Digite as vendas de abril:")
		leia(mes4)

		media = (mes1+mes2+mes3+mes4)/4

		escreva("O funcionario " + funcionario + " obteve uma média de vendas de " + media)
